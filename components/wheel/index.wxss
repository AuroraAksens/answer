.wheel_header image {
  width: 590rpx;
  height: 102rpx;
  margin-bottom: 30rpx
}

.wheel_wp {
  width: 640rpx;
  height: 640rpx;
  position: relative;
  margin: 160rpx auto
}

.wheel_wp image {
  display: block;
  width: 100%;
  height: 100%
}

.wheel_wp .wheel_pointer {
  position: absolute;
  width: 224rpx;
  height: 224rpx;
  top: 200rpx;
  left: 0;
  right: 0;
  margin: auto;
}

.close image {
  width: 80rpx;
  height: 80rpx;
  margin-top: 74rpx
}

/* 去除button默认样式 */

button::after {
  border: none;
}

button {
  background-color: transparent;
  padding-left: 0;
  padding-right: 0;
  line-height: inherit;
}

button {
  border-radius: 0;
}