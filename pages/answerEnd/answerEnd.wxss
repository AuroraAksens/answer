.page {
  width: 100%;
  height: 100vh;
  position: relative;
}

/* 背景 */
.jcbj {
  width: 100%;
  height: 100vh;
  position: absolute;
  top: 0;
}

/* 弹框背景 */
.tkbj {
  width: 720rpx;
  height: 900rpx;
  position: absolute;
  top: 15vh;
  left: 0;
  right: 0;
  margin: auto;
}

/* 弹框内容 */
.box {
  width: 90%;
  position: absolute;
  top: 360rpx;
  right: 0;
  left: 0;
  margin: auto;
  display: flex;
  justify-content: center;
  align-items: center;
  flex-direction: column;
  white-space: nowrap;
  overflow: hidden;
  text-overflow: ellipsis;
}

.box>.touImg>image {
  width: 120rpx;
  height: 120rpx;
  border-radius: 50%;
}

.box>.title {
  font-size: 30rpx;
  font-weight: bold;
  margin-top: 60rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: center;
}

.box>.body {
  font-size: 46rpx;
  color: #F33232;
  margin-top: 100rpx;
  margin-bottom: 60rpx;
  display: flex;
  justify-content: start;
  align-items: center;
}

.box>.foot {
  width: 380rpx;
  height: 80rpx;
  text-align: center;
  line-height: 80rpx;
  color: white;
  background-color: #4D7A73;
  border-radius: 50rpx;
}