  width: 380rpx;
  height: 80rpx;
  color: white;
  line-height: 80rpx;
  text-align: center;
  background: linear-gradient(180deg, #4D7A73 0%, #3B6560 100%);
  border-radius: 40rpx;
  margin: 40rpx auto;
}

.explainTips>.tipsBox>.but1 {
  width: 380rpx;
